<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Dish</th>
      <th>Name</th>
      <th>Zip</th>
      <th>Street</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.dish %></td>
        <td><%= order.name %></td>
        <td><%= order.zip %></td>
        <td><%= order.street %></td>
        <td><%= order.user.email %></td>
        <td><%= link_to 'Show', order %></td>
        <% if order.user == current_user %>
            <td><%= link_to 'Edit', edit_order_path(order) %></td>
            <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></t>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

